@model IEnumerable<Assignment2.Models.Team>

@{
    ViewData["Title"] = "Index";
}

<h1 class="MainHeadingForPages">Teams</h1>

   @if (User.IsInRole("Administrator"))
                        { 
<p>
    <a class="Create" asp-action="Create">Create New</a>
</p>
                        }
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TeamName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamCoach)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.TeamLeague)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TeamName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeamCoach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeamLeague)
            </td>
                @if (User.IsInRole("Administrator"))
                { 
            <td>

                <a class="Edits" asp-action="Edit" asp-route-id="@item.TeamId">Edit</a> |
                <a class="Edits" asp-action="Details" asp-route-id="@item.TeamId">Details</a> |
                <a class="Edits" asp-action="Delete" asp-route-id="@item.TeamId">Delete</a>
            </td>
                }
        </tr>
}
    </tbody>
</table>
